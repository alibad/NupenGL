nuget{
    nuspec {
        id = nupengl.core;
        version : 0.0.0.1;
        title: NupenGL Core;
        authors: {Jonathan Dickinson};
        owners: {Various Open Source Projects};
        licenseUrl: "https://raw.githubusercontent.com/jcdickinson/NupenGL/master/license.txt";
        projectUrl: "https://github.com/jcdickinson/NupenGL";
        iconUrl: "https://cdn.rawgit.com/jcdickinson/NupenGL/356c51d05d35426057b8465cd89e6b39f78361a1/icon.png";
        requireLicenseAcceptance:false;
        summary:NupenGL allows you to access OpenGL from your application.;

        description: @"This library adds the various libraries to your project
		that are required to build OpenGL applications on both the x86 and x64
		architectures. Includes FreeGLUT, GLFW and GLEW.";

        releaseNotes: "Initial Release.";
        copyright: Copyright 2014S;
        tags: { Game, OpenGL, GLUT, FreeGLUT, GLFW, GLEW };
    };

    files {

        #defines {
			SOURCES = Sources\;
            FREEGLUT = Sources\freeglut\;
			GLEW = Sources\glew\;
			GLFW = Sources\glfw-WIN64\;
			GLFW86 = Sources\glfw-WIN32\lib-msvc120\;
			GLFW64 = Sources\glfw-WIN64\lib-msvc120\;
        };

		include: { 
			"${SOURCES}include\**\*"
		};

		lib: {
			"opengl32.lib"
		};

		docs: {
			"license.txt"
		};

		// ** x64 **

		[x64,v120] {
			bin: {
				"${FREEGLUT}bin\x64\freeglut.dll",
				"${GLFW64}glfw3.dll",
				"${GLEW}bin\Release\x64\glew32.dll",
				"${GLEW}bin\Release\x64\glewinfo.exe",
				"${GLEW}bin\Release\x64\visualinfo.exe"
			};
			lib: {
				"${FREEGLUT}lib\x64\freeglut.lib",
				"${GLFW64}glfw3dll.lib",
				"${GLEW}lib\Release\x64\glew32.lib"
			};
		};

		// ** x86 **

		[x86,v120] {
			bin: {
				"${FREEGLUT}bin\freeglut.dll",
				"${GLFW86}glfw3.dll",
				"${GLEW}bin\Release\Win32\glew32.dll",
				"${GLEW}bin\Release\Win32\glewinfo.exe",
				"${GLEW}bin\Release\Win32\visualinfo.exe"
			};
			lib: {
				"${FREEGLUT}lib\freeglut.lib",
				"${GLFW86}glfw3dll.lib",
				"${GLEW}lib\Release\Win32\glew32.lib"
			};
		};
    }
}
